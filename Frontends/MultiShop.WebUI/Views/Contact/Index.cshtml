@model CreateContactDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <span class="breadcrumb-item active">İletişim</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Bize Uluaşın</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form id="SendNEwMessage" asp-controller="Contact" asp-action="Index" novalidate="novalidate" method="post">
                    <div class="control-group">
                        <input asp-for="NameSurname" type="text" class="form-control" placeholder="Adınız Soyadınız"
                               required="required" data-validation-required-message="Ad / Soyad Boş Bırakılamaz!" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input asp-for="Email" type="email" class="form-control" placeholder="E-Posta Adresiniz"
                               required="required" data-validation-required-message="E-Posta Boş Bırakılamaz!" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input asp-for="Subject" type="text" class="form-control" placeholder="Konu"
                               required="required" data-validation-required-message="Mesaj Konusu Boş Bırakılamaz! Bırakılamaz!" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea asp-for="Message" class="form-control" rows="8" placeholder="Mesaj"
                                  required="required"
                                  data-validation-required-message="Mesaj Boş Bırakılamaz! Bırakılamaz!"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Mesaj Gönder</button>
                    </div>
                </form>
            </div>
        </div>
        @await Component.InvokeAsync("_ContactDetailComponentPartial")
    </div>
</div>


