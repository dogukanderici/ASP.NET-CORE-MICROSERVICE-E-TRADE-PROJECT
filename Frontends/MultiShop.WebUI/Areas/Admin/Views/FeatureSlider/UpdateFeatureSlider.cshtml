@model UpdateFeatureSliderDto

@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Güncelleme Sayfası</h4>
                <p class="alert alert-info">Öne Çıkan ile ilgili ekleme işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="row">
                    <form id="UpdateFeatureSlider" asp-area="Admin" asp-controller="FeatureSlider" asp-action="UpdateFeatureSlider" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(x => x.FeatureSliderId)
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="Title" class="control-label">Öne Çıkan Başlığı</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="Öne Çıkan Başlığı" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="Description" class="control-label">Öne Çıkan Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" placeholder="Öne Çıkan Açıklama" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="Image" class="control-label">Yeni Öne Çıkan Görseli</label>
                                <input type="file" asp-for="Image" class="form-control" />
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.ImageUrl)
                        <div class="col-md-12">
                            <div class="form-group has-feedback">
                                <label class="control-label">Kayıtlı Öne Çıkan Görseli</label>
                                <a href="~/userfiles/@Model.ImageUrl" target="_blank">Görseli Görüntülemek İçin Tıklayınız</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="IsActive" class="control-label">Öne Çıkan Durumu</label>
                                <input asp-for="IsActive" type="checkbox" class="form-control" placeholder="Öne Çıkan Durumu" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


