@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">

    @if (ViewBag.StatusCode != null)
    {
        if (ViewBag.StatusCode == 404)
        {
            <div class="data-NotFound">
                <div class="alert alert-danger text-center">@ViewBag.StatusMessage</div>
            </div>
        }
    }

    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Listesi</h4>
                @if (Model.Count() > 0)
                {
                    <div class="bs-example" data-example-id="simple-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Tarih</th>
                                    <th>Yorum</th>
                                    <th>Durum</th>
                                    <th>Sil / Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    bool isActive = item.IsActive;
                                    <tr>
                                        <th scope="row">@item.UserCommentId</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.CommentDetail</td>
                                        @if (isActive)
                                        {
                                            <td><div class="btn btn-success">Aktif</div></td>
                                        }
                                        else
                                        {
                                            <td><div class="btn btn-danger">Pasif</div></td>
                                        }
                                        <td>
                                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.UserCommentId">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                            <a class="btn btn-info" asp-area="Admin" asp-controller="Comment" asp-action="UpdateComment" asp-route-id="@item.UserCommentId">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                }
                else
                {
                    <div class="alert alert-info">Gösterilecek Veri Bulunamadı!</div>
                }
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        setTimeout(function () {
            $(".data-NotFound").fadeOut(400, function () {
                $(this).remove();
            });
        }, 5000);
    });
</script>