@model UpdateCargoCompanyDto

@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketi Düzenleme Sayfası</h4>
                <p class="alert alert-info">Kargo Şirketi ile ilgili düzenleme işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="row">
                    <form id="AddNewCArgoCompany" asp-area="Admin" asp-controller="Cargo" asp-action="UpdateCargoCompany" method="post">
                        @Html.HiddenFor(x => x.CargoCompanyId)
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="CargoCompanyName" class="control-label">Kargo Şirketi Adı</label>
                                <input asp-for="CargoCompanyName" type="text" class="form-control" placeholder="Kargo Şirketi Adı">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
