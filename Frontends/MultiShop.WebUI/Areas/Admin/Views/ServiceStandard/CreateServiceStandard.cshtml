@model CreateServiceStandardDto

@{
    ViewData["Title"] = "CreateServiceStandard";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Servis Standartı Ekleme Sayfası</h4>
                <p class="alert alert-info">Servis Standartı ile ilgili ekleme işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="row">
                    <form id="AddNewServiceStandard" asp-area="Admin" asp-controller="ServiceStandard" asp-action="CreateServiceStandard" method="post">
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="ServiceStandardName" class="control-label">Servis Standartı Adı</label>
                                <input asp-for="ServiceStandardName" type="text" class="form-control" placeholder="Servis Standartı Adı">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="ServiceStandardIcon" class="control-label">Servis Standartı İkonu</label>
                                <input asp-for="ServiceStandardIcon" type="text" class="form-control" placeholder="Servis Standartı İkonu">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="IsActive" class="control-label">Servis Standartı Durumu</label>
                                <input asp-for="IsActive" type="checkbox" class="form-control" placeholder="Servis Standartı Durumu">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


