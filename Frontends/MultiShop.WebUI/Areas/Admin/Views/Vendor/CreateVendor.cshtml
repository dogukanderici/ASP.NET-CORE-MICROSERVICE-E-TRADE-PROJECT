@model CreateVendorDto

@{
    ViewData["Title"] = "CreateVendor";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Ekleme Sayfası</h4>
                <p class="alert alert-info">Marka ile ilgili ekleme işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="row">
                    <form id="AddNewVendor" asp-area="Admin" asp-controller="Vendor" asp-action="CreateVendor" method="post" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="VendorName" class="control-label">Marka Adı</label>
                                <input asp-for="VendorName" type="text" class="form-control" placeholder="Marka Adı">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-feedback">
                                <label asp-for="VendorImage" class="control-label">Marka Adı Görseli</label>
                                <input asp-for="VendorImage" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>