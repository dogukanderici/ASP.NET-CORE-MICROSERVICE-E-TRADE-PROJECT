@model List<ResultVendorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Listesi</h4>
                <p class="alert alert-info">Marka ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="simple-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka Adı</th>
                                <th>Marka Görseli</th>
                                <th>Sil / Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.VendorName</td>
                                    <td><img src="~/userfiles/@item.VendorImageUrl" alt="vendor-image" style="width: 50px; height: 50px;"></td>
                                    <td>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Vendor" asp-action="DeleteVendor" asp-route-id="@item.VendorId">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                        <a class="btn btn-info" asp-area="Admin" asp-controller="Vendor" asp-action="UpdateVendor" asp-route-id="@item.VendorId">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/admin/vendor/create" class="btn btn-primary">Yeni Marka Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>