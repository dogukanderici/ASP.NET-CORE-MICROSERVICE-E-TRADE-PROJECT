@using System.Globalization
@model List<ResultOrderDetailDto>

@{
    ViewData["Title"] = "GetOrderDetail";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sipariş Detayları</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Birim Fiyatı</th>
                                    <th>Adet</th>
                                    <th>Toplam Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductPrice.ToString("C", new CultureInfo("tr-TR"))</td>
                                        <td>@item.ProductAmount</td>
                                        <td>@item.ProductTotalPrice.ToString("C", new CultureInfo("tr-TR"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>