@model List<ResultOrderingByUserIdDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Geçmiş Siparişler</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Toplam Fiyat</th>
                                    <th>Sipariş Tarihi</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OrderingId</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.OrderDat</td>
                                        <td><a href="/user/myorder/getorderdetail/@item.OrderingId" class="btn btn-primary">Sipariş Detayı</a></td>
                                        <td><a href="/user/myorder/getcargooperation/@item.OrderingId" class="btn btn-info">Kargo Hareketleri</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>